# Server ayarları
PORT=5001
NODE_ENV=development

# Veritabanı ayarları
# Local PostgreSQL için:
# DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/muhasebe_db

# Neon PostgreSQL için (production):
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.eu-central-1.aws.neon.tech/muhasebe_db?sslmode=require

# Mail ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=alert-recipient@example.com

# Kasa uyarı limiti
KASA_MINIMUM_LIMIT=10000

# JWT Secret (uzun random string - production'da değiştirin!)
JWT_SECRET=your-super-secret-key-change-this-in-production
